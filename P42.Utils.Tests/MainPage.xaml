<Page x:Class="P42.Utils.Tests.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:P42.Utils.Tests"
      xmlns:runtimetests="using:Uno.UI.RuntimeTests"
      xmlns:utu="using:Uno.Toolkit.UI"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Grid utu:SafeArea.Insets="Left,Top,Right,Bottom">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Button x:Name="runButton"
          Content="RUN"
          FontSize="40"
          FontWeight="Bold"
          HorizontalAlignment="Left"
          Click="runButton_Click"
          />
        <runtimetests:UnitTestsControl Grid.Row="1"/>
    </Grid>
</Page>
